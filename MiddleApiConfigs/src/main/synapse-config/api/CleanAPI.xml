<?xml version="1.0" encoding="UTF-8"?>
<api context="/clean" name="CleanAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/first">
        <inSequence>
            <call>
                <endpoint>
                    <http method="get" uri-template="$SYSTEM:HR_DEP_ENDPOINT">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log level="custom">
                <property expression="json-eval($.[0])" name="first"/>
            </log>
            <payloadFactory media-type="json">
                <format>$1</format>
                <args>
                    <arg evaluator="json" expression="$.[0]"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
