<?xml version="1.0" encoding="UTF-8"?>
<api context="/clean" name="CleanAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/first">
        <inSequence>
            <log level="custom">
                <property expression="get-property('env', 'TokenURL')" name="TokenURL"/>
            </log>
            <property action="remove" name="Accept-Encoding" scope="transport"/>
            <call>
                <endpoint>
                    <http method="get" uri-template="get-property('env', 'ServiceURL')">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                        <authentication>
                            <oauth>
                                <clientCredentials>
                                    <clientId>{get-property('env', 'ConsumerKey')}</clientId>
                                    <clientSecret>{get-property('env', 'ConsumerSecret')}</clientSecret>
                                    <tokenUrl>{get-property('env', 'TokenURL')}</tokenUrl>
                                    <authMode>header</authMode>
                                </clientCredentials>
                            </oauth>
                        </authentication>
                    </http>
                </endpoint>
            </call>
            <log level="custom">
                <property expression="json-eval($.[0])" name="first"/>
            </log>
            <payloadFactory media-type="json">
                <format>$1</format>
                <args>
                    <arg evaluator="json" expression="$.[0]"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
